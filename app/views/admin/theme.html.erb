<%= page_heading 'Select Theme' %>

<div id="themes">
  <% for theme in @themes %>
    <% link_to(themes_path, :class => 'theme' + (' selected' if theme.active?).to_s) do %>
      <%= image_tag theme.screenshot_path, :alt => theme.name.humanize %>
      <%= theme.name.humanize %>
    <% end %>
  <% end %>
  <div class="clearfix"></div>
</div>