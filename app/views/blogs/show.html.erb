<%= page_heading @blog.title %>

<div class="section">
  <%= @blog.description %>
</div>

<div class="section">
  <% for post in @posts %>
    <div class="element">
      <h3 class="<%= post.enabled ? "enabled_post" : "disabled_post"%>"><%= link_to post.title, [@blog, post] %></h3>
      <small><%= post.updated_at.strftime(AppConfig.date_string) %> by <%= User.find(post.author_id).login %></small>
      <div class="blog_post_body"><%= post.body %></div>
    </div>
  <% end %>
</div>
