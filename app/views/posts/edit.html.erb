<%= page_heading 'Editing Post' %>

<div class="section">
  <% form_for([@blog,@post]) do |f| %>
    <div class="element">
      <%= f.error_messages %>
    </div>
      
    <div class="element">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="element">
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div>

    <div class="element">
      <%= f.label :slug %>
      <%= f.text_field :slug %>
    </div>

    <div class="element">
      <%= f.label :enabled %>
      <%= check_box('post', 'enabled') %>
    </div>

    <div class="element">
      <%= f.submit "Update" %>
    </div>
  <% end %>
  <div class="element">
    <%= link_to 'Show', [@blog,@post] %> | <%= link_to 'Back', blog_posts_path(@blog) %>
  </div>
</div>
