<%= page_heading 'Edit Post' %>

<% enhanced_form_for([@blog, @post], :html => { :class => 'content' }) do |f| %>
  <%= f.standard_fields %>
  <% f.actions do %>
    <%= f.submit 'Update' %>
    or <%= link_to 'Delete', [@blog, @post], :method => :delete, :confirm => 'Are you sure?' %>
    or <%= link_to 'Cancel', blog_posts_path %>
  <% end %>
<% end %>

<%= aside_help_for :posts %>