<%= page_heading 'New User' %>

<div class="section">
  <% form_for :user, :url => users_path do |f| %>   
    <div class="element">
      <%= f.error_messages %>
    </div>
      
    <div class="element">
      <%= f.label :login %>
      <%= f.text_field :login %>
    </div>
      
    <div class="element">
      <%= f.label :email %>
      <%= f.text_field :email, :size => 60 %>
    </div>
      
    <div class="element">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
      
    <div class="element">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="element">
      <%= submit_tag 'Sign up' %>
    </div>
  <% end %>
</div>
