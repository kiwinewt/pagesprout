<%= page_heading 'Edit Page' %>

<% enhanced_form_for(@page) do |f| %>
  <%= f.standard_fields %>
  <% f.actions do %>
    <%= submit_tag 'Create' %>
    or <%= link_to 'Delete', @page, :method => :delete, :confirm => 'Are you sure?' %>
    or <%= link_to 'Cancel', list_pages_path %>
  <% end %>
<% end %>