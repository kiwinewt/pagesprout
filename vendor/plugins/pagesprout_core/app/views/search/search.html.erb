<%= page_heading 'Search Results' %>

<% if @results %>
  <p>
    Search: <%= @query %><br />
    Total number of results: <%= @results.total_hits %>
  </p>
  <%- for item in @results -%>
    <p>
      <%= search_result(item, @query) %>
    </p>
  <%- end -%>
<% else %>
  <p>Please enter a search term.</p>
<% end %>