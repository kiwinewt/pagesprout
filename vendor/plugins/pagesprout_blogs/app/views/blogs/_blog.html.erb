<div class="blog<%= alternate_row %> <%= blog.enabled? ? 'published' : 'unpublished' %>">
  <h3 class="name"><%= link_to h(blog.title), blog_posts_path(blog) %></h3>
  <div class="actions">
    <%= link_to 'Edit', edit_blog_path(blog) %>
    <%= link_to 'Delete', blog, :method => :delete, :confirm => 'Are you sure?' %>
  </div>
  <div class="status">
    <% if blog.posts? %>
      Last updated: <%= time_ago_in_words(blog.posts.last.updated_at) %> ago<br />
      <%= link_to pluralize(blog.posts.size, 'Post'), blog_posts_path(blog) %>
    <% else %>
      You haven't made any posts yet.<br />
    <% end %>
  </div>
  <%= link_to 'New Post', new_blog_post_path(blog) %>
</div>