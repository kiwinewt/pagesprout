<%= page_heading @blog.title %>

<%= @blog.description %>

<% for post in @posts %>
  <div class="post">
    <h3><%= link_to h(post.title), [@blog, post] %></h3>
    <small><%= post.updated_at.strftime(AppConfig.date_string) %> by <%=h post.user.name %></small>
    <%=h post.body %>
  </div>
<% end %>